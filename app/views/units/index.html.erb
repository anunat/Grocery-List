<div class="page-header">
  <h2>
    <strong>
      Units
    </strong>
    <a href="/units/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
    <a href="/adddefaultunits" class="btn btn-lg btn-success">Add Starter Units</a>
    <a href="/users/manage" class="btn btn-lg btn-primary">Back</a>
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td>
          <a href="/units/<%= unit.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
          <a href="/delete_unit/<%= unit.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
