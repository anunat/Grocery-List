<div class="page-header">
  <h1>
    Friends
    <a href="/friends/new" class="btn btn-lg btn-success">New Friend</a>
    <a href="/users/editlist" class="btn btn-lg btn-primary">Back</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Friend</th>
        <th>View</th>
        <th>Delete</th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.user.email %></td>
        <td>
          <%  if !Friend.find_by(:user_id => friend.friend_id, :friend_id => current_user.id).nil? %>
          <a href="/friends/showlist/<%= friend.user.id %>" class="btn btn-primary">View List</a>
          <% end %>
        </td>
        <td>
          <a href="/delete_friend/<%= friend.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
