<div class="page-header">
  <h2>
    <strong>
      Departments
    </strong>
    <a href="/departments/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
    <a href="/adddefaultdept" class="btn btn-lg btn-success">Add Starter Departments</a>
    <a href="/users/manage" class="btn btn-lg btn-primary">Back</a>
  </h2>
</div>

<div class="row">
  <div class="col-md-8">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td>
          <a href="/departments/<%= department.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
          <a href="/delete_department/<%= department.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
